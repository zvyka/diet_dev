<h1>Listing announcements</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @announcements.each do |announcement| %>  
	<tr>
    <td><div class="<%= announcement.tag %>"><%= announcement.message %></div></td>
    <td><%= announcement.starts_at %></td>
    <td><%= announcement.ends_at %></td>
    <td><%= link_to 'Show', announcement %></td>
    <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
    <td><%= link_to 'Destroy', announcement, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

