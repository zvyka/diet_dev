
	<p>
		<span class="content round">
		<% @foods.each do |food| %>
	 		<% if food.id == meal.food_id %></span>
		</p>
<div id="nut_facts">
<table>
	<tr>
		<% times = ["in the morning", "in the afternoon", "during the evening", "at night"] %>
		On <%= meal.day.strftime("%A, %B %e, %Y") %> <%= times[meal.time_of_day.to_i - 1] %> you ate: 
	</tr>
	<tr class="<%= cycle("even", "odd") %>"> 
		<td>
			Food Name
		</td>
		<td>
			<%= food.name %>
		</td>
	</tr>
	<tr class="<%= cycle("even", "odd") %>"> 
		<td>
			Price
		</td>
		<td>
			<%= number_to_currency(meal.price, :unit => "$") %>
		</td>
	</tr>
	<tr class="<%= cycle("even", "odd") %>"> 
		<td>
			Location
		</td>
		<td>
			<% locations = ["The Diner", "South Campus Diner", "Denton", "Shops", "Off-Campus"] %>
			<%= locations[meal.location.to_i - 1] %>
		</td>
	</tr>
	<tr class="<%= cycle("even", "odd") %>"> 
		<td>
			Portion
		</td>
		<td>
			<%= pluralize(meal.serving_size, food.portion_display_name) %>
		</td>
	<tr class="<%= cycle("even", "odd") %>"> 
		<td>
			Calories
		</td>
		<td>
			<%= food.calories %>
		</td>
	</tr>
	<% if food.added_sugars > 0 %>
	<tr class="<%= cycle("even", "odd") %>"> 
		<td>
			Added Sugars
		</td>
		<td>
			<%= pluralize food.added_sugars,  "gram"%>
		</td>
	</tr>
	<%end%>
